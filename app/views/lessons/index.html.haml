- content_for(:title) do
  Lessons - Launch Academy

%ul.breadcrumbs
  %li.current= link_to "Lessons", lessons_path

%h2 Lessons

.clearfix
  %dl.sub-nav.left
    %dt Filter:
    %dd{ class: ("active" unless @active_type) }
      = link_to "All", lessons_path(order: @order)
    - Lesson::LESSON_TYPES.each do |type|
      %dd{ class: ("active" if type == @active_type) }
        = link_to type.capitalize.pluralize, lessons_path(type: type, order: @order)

  %dl.sub-nav.right
    %dt Order:
    %dd{ class: ("active" unless @order) }
      = link_to "Name", lessons_path(type: @active_type)
    %dd{ class: ("active" if @order == "most_recent") }
      = link_to "Most Recent", lessons_path(order: "most_recent", type: @active_type)


- if params[:query]
  .result-count
    - if @lessons.empty?
      = "No results found for \"#{params[:query]}\"."
    - else
      = "Found #{@lessons.length} result(s) for \"#{params[:query]}\"."

.lessons
  - @lessons.each do |lesson|
    .lesson
      .lesson-type{ class: lesson.type }= lesson.type
      %h3.title= link_to lesson.title, lesson
      .description
        = lesson.description
